# Stage 1: build (not really needed here)
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci --production=false
COPY . .

# Stage 2: production image
FROM node:18-alpine
WORKDIR /app
ENV NODE_ENV=production
COPY --from=build /app ./
RUN npm ci --only=production
EXPOSE 3000
CMD ["npm", "start"]
